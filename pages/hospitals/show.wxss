page {
  height: 100%;
  box-sizing: border-box;
}

.main {
  padding: 0 50rpx 40rpx;
}

.hospital-warning {
  margin: 0 -50rpx 30rpx;
  padding: 10rpx 50rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-weight: bold;
  text-align: center;
  background-color: #E25D56;
}

.hospital-warning-icon {
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.hospital-name {
  font-size: 40rpx;
  font-weight: bold;
}

.hospital-info {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #777;
}

.hospital-map {
  width: 100%;
  height: 50%;
}
